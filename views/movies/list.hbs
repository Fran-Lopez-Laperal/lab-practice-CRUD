<div>
  <div>
    <h1>Ironhack Cinema</h1>
  </div>
  <div>
    Click on the movie to check rhe showtimes!
  </div>
</div>

<div class="d-flex flex-wrap" style="margin-top: 10vw;">
  {{#each movies as |movie|}}
    <div class="container" style="width: 18rem;">
      <img src="{{movie.image}}" class="card-img-top" alt="..." />
      <div class="card-body">
        <h5 style="text-align:center" class="card-title">{{movie.title}}</h5>
        <a style="margin: 2em" href="/movies/{{movie.id}}" class="btn btn-primary">See more</a>
      </div>
    </div>

  {{/each}}
</div>