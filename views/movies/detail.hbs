<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{movie.image}}" class="img-fluid rounded-start" alt="..." />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{movie.title}}</h5>
        <p class="card-text">{{movie.director}}</p>
        <p class="card-text"><small
            class="text-muted"
          >{{movie.description}}</small></p>

      </div>

    </div>
  </div>
</div>

<div>
  <a href="/movies/{{movie.id}}/edit">EDIT</a>
</div>

<form action="/movies/{{movie.id}}/delete" method="POST" class="needs validation" novaidate>
  <button type="submit" class="btn btn-danger">
    delete
  </button>
</form>