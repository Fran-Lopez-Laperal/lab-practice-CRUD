<h5>CREATE NEW MOVIE</h5>


<div>

  {{#if errors}}
    <div class="alert alert-danger">
      {{#each errors as |error|}}
        <div>error</div>
      {{/each}}
    </div>

  {{/if}}
<div class="col-12 mt-3">
  <form
    action="/movies/create"
    method="post"
    class="needs-validation"
    novalidate
  >
    <label for="title">title</label>
    <div class="input-group mb-1">

      <span class="input-group-text"><i class="fa fa-film fa-fw"></i></span>

      <input
        value="{{movie.title}}"
        type="text"
        name="title"
        class="form-control"
        placeholder="name movie"
          required
      />
      
    </div>
    <label for="director">Movie director</label>
    <div class="input-group mb-2">
      <span class="input-group-text"><i class="fa fa-film fa-fw"></i></span>
      <input
        value="{{this.director}}"
        type="text"
        name="director"
        class="form-control"
        placeholder="name director"
          required
      />
    </div>
    <label for="description">Movie description</label>
    <div class="input-group mb-2">
      <span class="input-group-text"><i class="fa fa-book fa-fw"></i></span>
      <input
        value="{{movie.description}}"
        type="text"
        name="description"
        class="form-control"
        placeholder="add description"
          required
      />
    </div>

    <label for="image">Movie image</label>
    <div class=" col-12 input-group mb-1">

          <span class="input-group-text"><i class="fa fa-picture-o fa-fw"></i></span>

          <input
            type="text"
            name="image"
            class="form-control"
            placeholder="Movie image url..."
          />
        </div>


    <div class="d-grid">
      <button class="btn btn-primary" type="submit">New Movie</button>
    </div>
  </form>
</div>


  

